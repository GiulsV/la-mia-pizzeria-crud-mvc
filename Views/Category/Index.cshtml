@model List<Category>

@if (Model.Count() == 0)
{
    <h2>Purtoppo non hai nessuna categoria inserita!!!</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">nome</th>
                <th scope="col">azione</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category categoria in Model)
            {
                <tr>
                    <th scope="row">@categoria.Name</th>
                    <td>
                        <a href="@Url.Action("Details","Category", new {id = categoria.Id})">
                            <button type="button" class="btn btn-primary btn-sm mb-3">mostra</button>
                        </a>
                        <a href="@Url.Action("Update","Category", new {id = categoria.Id})">
                            <button type="button" class="btn btn-warning btn-sm mb-3">modifica</button>
                        </a>
                        <form asp-controller="Category" asp-action="Delete" asp-route-id="@categoria.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm">elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
