@model List<Pizza>

@if (Model.Count() == 0)
{
    <h2>nessuna pizza trovata</h2>
}
else
{
    <table class="table table-hover table-sm caption-top">
        <caption>Lista Pizze</caption>
        <thead class="table-primary">
            <tr class="text-capitalize">
                <th scope="col">id</th>
                <th scope="col">img</th>
                <th scope="col">nome</th>
                <th scope="col">desccrizione</th>
                <th scope="col">prezzo</th>
                <th scope="col">azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Pizza pizza in Model)
            {
                <tr>
                    <th scope="row">@pizza.Id</th>
                    <td><img alt="@pizza.Name" src="@pizza.Image" class=" img-fluid"></td>
                    <th>@pizza.Name</th>
                    <td>@pizza.Description</td>
                    <td>@pizza.Price</td>
                    <td>
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("Detail", new {id = pizza.Id})" >
                                <button class="text-capitalize btn btn-primary rounded" type="submit">dettagli</button>
                            </a>
                            <a href="@Url.Action("Update", "Pizza", new { id = pizza.Id })">
                                <button class="text-capitalize btn btn-warning rounded" type="submit">modifica</button>
                            </a>
                            <form asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id" method="post">
                                <button type="submit" class="btn btn-danger text-capitalize ">elimina</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}