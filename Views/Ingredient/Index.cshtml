@model List<Ingredient>

@if (Model.Count() == 0)
{
    <h2>non ingredienti inseriti</h2>
}
else
{
    <table class="table table-hover table-sm caption-top">
        <caption class="display-5 text-dark">Lista Categorie</caption>
        <caption>
            <a class="text-uppercase" asp-area="" asp-controller="Ingredient" asp-action="Create">
                <button class="text-uppercase btn btn-success " type="submit">crea categoria</button>
            </a>
        </caption>
        <thead>
            <tr>
                <th scope="col">ingrediente</th>
                <th scope="col">pizza</th>
                <th scope="col">azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Ingredient ingredient in Model)
            {
                <tr>
                    <th scope="row">@ingredient.Name</th>
                    @if (ingredient.Pizze.Count == 0)
                    {
                        <td>Nessuna pizza</td>
                    }
                    else
                    {
                        <td>@ingredient.Pizze.Count</td>
                    }

                    <td class="d-flex">
                        <a href="@Url.Action("Update","Ingredient", new {id = ingredient.Id})">
                            <button type="button" class="btn btn-warning btn-sm mx-3">MODIFICA</button>
                        </a>
                        <form asp-controller="Ingredient" asp-action="Delete" asp-route-id="@ingredient.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-sm mx-3">CANCELLA</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
